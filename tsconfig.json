{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@AppRoot/*": ["src/*"],
      "@Common/*": ["src/common/*"],
      "@Posts/*": ["src/posts/*"],
      "@Auth/*": ["src/auth/*"],
      "@Users/*": ["src/users/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
