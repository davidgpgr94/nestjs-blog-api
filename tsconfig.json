{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@AppRoot/*": ["src/*"],
      "@Common/*": ["src/common/*"],
      "@Posts/*": ["src/posts/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
